<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>

        <service id="build.transfer.composite" class="Magento\MagentoCloud\Step\StepComposite">
            <argument type="collection">
                <argument type="service" id="Magento\MagentoCloud\Step\Build\CompressStaticContent" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\ClearInitDirectory" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\BackupData" />
            </argument>
        </service>

        <service id="Magento\MagentoCloud\Step\Build\BackupData">
            <argument type="service" id="Psr\Log\LoggerInterface" />
            <argument type="service" id="build.backupData.composite" />
        </service>

        <service id="build.backupData.composite" class="Magento\MagentoCloud\Step\StepComposite">
            <argument type="collection">
                <argument type="service" id="Magento\MagentoCloud\Step\Build\BackupData\StaticContent" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\BackupData\WritableDirectories" />
            </argument>
        </service>

        <service id="Magento\MagentoCloud\Command\Build\Transfer">
            <argument type="service" id="build.transfer.composite" />
        </service>
    </services>
</container>

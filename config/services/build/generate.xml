<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>

        <service id="build.generate.composite" class="Magento\MagentoCloud\Step\StepComposite">
            <argument type="collection">
                <argument type="service" id="Magento\MagentoCloud\Step\Build\PreBuild" />
                <argument type="service" id="Magento\MagentoCloud\Step\SetProductionMode" />
                <argument type="service" id="build.validate.configuration" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\RefreshModules" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\ApplyPatches" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\MarshallFiles" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\CopySampleData" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\CompileDi" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\ComposerDumpAutoload" />
                <argument type="service" id="Magento\MagentoCloud\Step\Build\DeployStaticContent" />
            </argument>
         </service>

        <service id="build.validate.configuration" class="Magento\MagentoCloud\Step\ValidateConfiguration">
            <argument type="service" id="Psr\Log\LoggerInterface" />
            <argument type="collection">
                <argument type="collection" key="500">
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\ComposerFile" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\StageConfig" />
                </argument>
                <argument type="collection" key="300">
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\ConfigFileExists" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\UnsupportedBuildOptionsIni" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\StageConfigDeprecatedVariables" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\ModulesExists" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\AppropriateVersion" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\Build\ScdOptionsIgnorance" />
                    <argument type="service" id="Magento\MagentoCloud\Config\Validator\IdealState" />
                </argument>
            </argument>
        </service>

        <service id="Magento\MagentoCloud\Step\Build\DeployStaticContent">
            <argument type="service" id="build.backupData.composite" />
        </service>

        <service id="build.deploy.static.content.composite" class="Magento\MagentoCloud\Step\StepComposite">
            <argument type="collection">
                <argument type="service" id="Magento\MagentoCloud\Step\Build\DeployStaticContent\Generate" />
            </argument>
        </service>

        <service id="Magento\MagentoCloud\Command\Build\Generate">
            <argument type="service" id="build.generate.composite" />
        </service>
    </services>
</container>